{
  "$schema": "../../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../../dist/libs/ng/loader",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "input": "src/templates",
      "glob": "**/*.html",
      "output": "templates"
    },
    {
      "input": "src/bin",
      "glob": "**/*",
      "output": "bin"
    }
  ]
}

